<%= turbo_frame_tag :modal do %>
<div data-controller="turbomodal" class="modal" data-action="turbo:submit-end->turbomodal#submitEnd">
  <h1>Editing note</h1>

  <%= render "form", note: @note %>

  <br>

  <div>
    <%= link_to "Show this note", @note %> |
    <%= link_to "Back to notes", notes_path %>
  </div>
  <div>
    <%= link_to 'Cancel', '#', data: { action: 'click->turbomodal#cancelModal' } %>
  </div>
</div>

<% end %>
