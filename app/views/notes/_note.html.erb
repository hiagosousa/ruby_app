<div class="note" id="<%= dom_id note %>">

  <div class="topBar">
    <span>
      <%= distance_of_time_in_words(note.created_at, Time.now) %> ago
    </span>  
      <div class="buttons">
        <%= link_to 'Edit', edit_note_path(note),  data: { turbo_frame: "modal" }, class: "edit-button"  %>
        <%= button_to "x", note_path(note), method: :delete, class: "delete-button" %>                       
      </div>
  </div>

  <div class="noteContent">
    <h2 class="title">
      <%= note.title %>
    </h2>
    <p>
      <%= note.description %>
    </p>
  </div>

</div>
